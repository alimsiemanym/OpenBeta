= form_for(@genre) do |f|
  - if @genre.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@genre.errors.count, "error") 
        prohibited this genre from being saved:
      %ul
      - @genre.errors.full_messages.each do |msg|
        %li= msg

  %div.field
    = f.label :name
    %br/
    = f.text_field :name
  
  %div.actions
    = f.submit
