%h1 All genres

%table
  %tr
    %th Name
    %th
  
  - @genres.each do |genre|
    %tr
      %td= genre.name
      %td
        = link_to 'Show', genre
        = link_to 'Edit', edit_genre_path(genre)
        = link_to 'Destroy', genre, :confirm => 'Are you sure?', :method => :delete

%br/
= link_to 'New Genre', new_genre_path
