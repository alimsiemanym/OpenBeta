= form_for(@warning) do |f|
  - if @warning.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@warning.errors.count, "error") 
        prohibited this warning from being saved:

      %ul
        - @warning.errors.full_messages.each do |msg|
          %li= msg

  %div.field
    = f.label :name
    %br/ 
    = f.text_field :name
  
  %div.field
    = f.label :description 
    %br/
    = f.text_area :description
  
  %div.actions
    = f.submit
