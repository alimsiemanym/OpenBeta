= form_for(@gender) do |f|
  - if @gender.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@gender.errors.count, "error")
        prohibited this gender from being saved:

      %ul
        - @gender.errors.full_messages.each do |msg|
          %li= msg

  %div.field
    = f.label :name
    %br/
    = f.text_field :name
  %div.actions
    = f.submit
